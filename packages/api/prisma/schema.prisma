generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = "linux-musl-arm64-openssl-3.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MoodNote {
  id          String            @id
  title       String?
  emotion     Emotion
  tags        TagsOnMoodNotes[]
  intencity   Int
  description String?
  createdAt   DateTime          @default(now())

  activity   Activity? @relation(fields: [activityId], references: [id])
  activityId String?
}

model Activity {
  id          String     @id
  name        String
  description String
  moodNotes   MoodNote[]
}

enum Emotion {
  happy
  sad
  angry
  anxious
  calm
  tired
  lonely
  stressed
  grateful
}

model MoodTag {
  name     String       @unique
  category MoodCategory

  TagsOnMoodNotes TagsOnMoodNotes[]
}

enum MoodCategory {
  school
  work
  money
  health
  relationships
}

model TagsOnMoodNotes {
  moodNote    MoodNote @relation(fields: [moodNoteId], references: [id])
  moodNoteId  String
  moodTag     MoodTag  @relation(fields: [moodTagName], references: [name])
  moodTagName String

  @@id([moodNoteId, moodTagName])
}
