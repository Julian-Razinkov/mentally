generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = "linux-musl-arm64-openssl-3.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id
  name   String
  email  String  @unique
  hash   String
  gender Gender?
  age    Int?
}

enum Gender {
  male
  female
  unknown
}

model MoodNote {
  id          String            @id
  title       String?
  emotion     Emotion
  tags        TagsOnMoodNotes[]
  intencity   Int
  description String?
  createdAt   DateTime          @default(now())

  activity   Activity? @relation(fields: [activityId], references: [id])
  activityId String?
}

model Activity {
  id          String     @id
  name        String
  description String
  moodNotes   MoodNote[]
}

enum Emotion {
  happy
  sad
  angry
  anxious
  calm
  tired
  lonely
  stressed
  grateful
}

// Standard GAD-7 test
model Test {
  id        String       @id
  // userId    String // link to your User model
  type      TestType
  createdAt DateTime     @default(now())
  score     Int
  answers   TestAnswer[]
}

model TestAnswer {
  id             String @id
  questionNumber Int
  score          Int

  testId String
  test   Test   @relation(fields: [testId], references: [id])
}

enum TestType {
  PHQ9 // Depression
  GAD7 // Anxiety
}

model MoodTag {
  name     String       @unique
  category MoodCategory

  TagsOnMoodNotes TagsOnMoodNotes[]
}

enum MoodCategory {
  school
  work
  money
  health
  relationships
}

model TagsOnMoodNotes {
  moodNote    MoodNote @relation(fields: [moodNoteId], references: [id])
  moodNoteId  String
  moodTag     MoodTag  @relation(fields: [moodTagName], references: [name])
  moodTagName String

  @@id([moodNoteId, moodTagName])
}
