generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = "linux-musl-arm64-openssl-3.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MoodNote {
  id          String        @id
  title       String?
  emotion     Emotion
  tags        MoodNoteTag[]
  intencity   Int
  description String?
  createdAt   DateTime      @default(now())
}

enum Emotion {
  happy
  sad
  angry
  anxious
  calm
  tired
  lonely
  stressed
  grateful
}

//TODO: Find out how I can make tags more structured and give them more info
model MoodNoteTagCategory {
  name String        @unique
  tags MoodNoteTag[]
}

model MoodNoteTag {
  name                    String              @id
  category     MoodNoteTagCategory @relation(fields: [categoryName], references: [name])
  categoryName String
  MoodNotes               MoodNote[]
}
